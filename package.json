{
  "name": "multi-vendor-ecom",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "libs/*",
    "infra/*"
  ],
  "scripts": {
    "lint": "eslint \"{services,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"{services,libs}/**/*.ts\"",
    "build:all": "yarn workspaces run build",
    "start:dev:all": "yarn workspaces --exclude multi-vendor-ecom run start:dev",
    "infra:up": "docker-compose -f ./infra/docker-compose.yml up -d",
    "infra:down": "docker-compose -f ./infra/docker-compose.yml down",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@4.3.1"
}
